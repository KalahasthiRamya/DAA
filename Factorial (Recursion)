C Programming:

#include<stdio.h>
int fact(int n);
int main(){
    int num=4;
    printf("%d",fact(num));
    return 0;
}

int fact(int n){
    if(n==1){
        return 1;
    }
    if(n==0){
        return 0;
    }
    
    return fact(n-1)*n;
}

Python:

def fact(num):
    if(num==0):
        return 0
    if(num==1):
        return 1
    return fact(num-1)*num

n=6
print(fact(n))
